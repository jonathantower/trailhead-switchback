@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign up";
}

<div class="page-header">
    <h1>Sign up</h1>
    <p class="description">Create a Switchback account.</p>
</div>

<form method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="field-validation-error"></span>
    </div>
    <div asp-validation-summary="All" class="validation-summary-errors"></div>
    <button type="submit" class="btn btn-primary">Sign up</button>
</form>
<p style="margin-top:1rem;"><a asp-page="/Login">Already have an account? Log in</a></p>
