@page
@model Switchback.Web.Pages.Rules.EditModel
@{
    ViewData["Title"] = "Edit rule";
}

<div class="page-header">
    <h1>Edit rule</h1>
    <p class="description">Update the classification rule name, prompt, destination, or enabled state.</p>
</div>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert-error">@Model.Error</div>
}

<form method="post" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prompt"></label>
        <textarea asp-for="Prompt" rows="4"></textarea>
        <span asp-validation-for="Prompt" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" />
        <span asp-validation-for="Destination" class="field-validation-error"></span>
    </div>
    <div class="form-group">
        <label asp-for="Enabled"></label>
        <input asp-for="Enabled" type="checkbox" />
    </div>
    <div asp-validation-summary="All" class="validation-summary-errors"></div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<p style="margin-top:1.5rem;"><a asp-page="Index">Back to rules</a></p>
