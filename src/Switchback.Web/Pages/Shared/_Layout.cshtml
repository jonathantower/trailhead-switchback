<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trailhead Switchback</title>
</head>
<body>
    <header>
        <nav>
            <a asp-page="/Index">Home</a>
            <a asp-page="/Connections">Connections</a>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-page="/Logout">Log out</a>
            }
            else
            {
                <a asp-page="/Login">Log in</a>
                <a asp-page="/Register">Sign up</a>
            }
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>Trailhead Switchback &mdash; AI as interpretation, not control.</p>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
